<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- Disseny de l'activitat Main (principal).
     Marc Bajona i Ester Castellà
     M07-UF1 Lliurament 4 -->

    <!-- Creem dos Linear Layouts amb 3 ImageButtons cadascún
     que faràn de sel·lectors de les categories. -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/categoria1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />

        <ImageButton
            android:id="@+id/categoria2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />

        <ImageButton
            android:id="@+id/categoria3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/categoria4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />

        <ImageButton
            android:id="@+id/categoria5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />

        <ImageButton
            android:id="@+id/categoria6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="botonsCategories"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boto_categoria2" />
    </LinearLayout>

    <View
        android:id="@+id/divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


     <!-- Creem un ScrollView que permetrà fer scroll down i up de tots els elements
      de la categoria sel·leccionada prèviament amb els ImageButtons.

      A més, aquest element contenidor canviarà la seva mida (width i height) segons
      la densitat de pantalla i la resolució de pantalla de cada dispositiu (arxiu adjunt).
     -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisor">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />-->

        <LinearLayout
            android:id="@+id/linLayVert1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divisor">

            <LinearLayout
                android:id="@+id/linLayHor1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProducte1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/star_big_on" />

                <LinearLayout
                    android:id="@+id/linLayVertProd1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomProducte1"
                        android:layout_width="168dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:text="NOM PRODUCTE" />

                    <TextView
                        android:id="@+id/txtDescripcioProducte1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DESCRIPCIÓ PRODUCTE" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayHor2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProducte2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/star_big_on" />

                <LinearLayout
                    android:id="@+id/linLayVertProd2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomProducte2"
                        android:layout_width="168dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:text="NOM PRODUCTE" />

                    <TextView
                        android:id="@+id/txtDescripcioProducte2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DESCRIPCIÓ PRODUCTE" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayHor3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProducte3"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/star_big_on" />

                <LinearLayout
                    android:id="@+id/linLayVertProd3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomProducte3"
                        android:layout_width="168dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:text="NOM PRODUCTE" />

                    <TextView
                        android:id="@+id/txtDescripcioProducte3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DESCRIPCIÓ PRODUCTE" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayHor4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProducte4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/star_big_on" />

                <LinearLayout
                    android:id="@+id/linLayVertProd4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomProducte4"
                        android:layout_width="168dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:text="NOM PRODUCTE" />

                    <TextView
                        android:id="@+id/txtDescripcioProducte4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DESCRIPCIÓ PRODUCTE" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divisorFinal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="14dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>