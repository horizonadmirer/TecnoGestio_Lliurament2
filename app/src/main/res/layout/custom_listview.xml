<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Disseny de l'activitat Custom ListView.
    Marc Bajona i Ester Castellà
    M07-UF1 Lliurament 5 -->

    <!-- Creem dos Linear Layouts per mostrar les dades
     que ens donen com a resultat de la cerca avançada-->

    <LinearLayout
        android:id="@+id/linLayHor1"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:orientation="horizontal">

        <!-- ImatgeView que ens mostra la imatge del producte selecionat. -->

        <ImageView
            android:id="@+id/imgProducte"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/linLayVertProd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TextView que ens mostra el nom del producte selecionat. -->
            <TextView
                android:id="@+id/txtNomProducte"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="NOM PRODUCTE"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- TextView que ens mostra la descripció del producte selecionat. -->
            <TextView
                android:id="@+id/txtDescripcioProducte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:text="DESCRIPCIÓ PRODUCTE"
                android:textAlignment="center" />

            <!-- TextView que ens mostra les unitats restants i la marca del producte selecionat. -->
            <TextView
                android:id="@+id/txtMarcaUnitats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MARCA i UNITATS"
                android:textAlignment="center" />

            <!-- TextView que ens mostra el preu del producte selecionat. -->
            <TextView
                android:id="@+id/txtPreu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PREU €"
                android:textAlignment="center"
                android:textColor="#5CB4F8"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>